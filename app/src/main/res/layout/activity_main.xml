<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/pick_color_instruction_text"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/color_sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@android:style/Widget.Holo.Light.Spinner"
        android:entries="@array/colors"
        android:layout_marginTop="16dp"
        android:minHeight="48dp"
        android:spinnerMode="dialog" />

    <Button
        android:id="@+id/show_color_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_color_btn_text"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/your_color_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/your_color_text"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/color_box_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp" />
</LinearLayout>